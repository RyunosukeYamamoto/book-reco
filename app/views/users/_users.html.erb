<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= gravatar_url(user, { size: 50 }) %>" alt="">
        <div class="media-body">
            <%= link_to user.name, user_path(user) %>
          <%= render 'relationships/follow_button', user: user %>
        </div>
      </li>
      <hr>
    <% end %>
  </ul>
  <%= paginate users %>
<% end %>